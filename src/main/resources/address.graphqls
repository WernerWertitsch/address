type Address {
	id: ID!
	clientId: String
	addressLine1: String
	addressLine2: String
	zip: String
	city: String
	country: String
}

# Root
type Query {
	findAllAddresses: [Address]!
	getAddressesFor(clientId: String!): [Address]
	countAddresses: Int!
}

# Root
type Mutation {
	createAdress(clientId: String!, addressLine1: String!, addresLine2: String, zip: String!,
		city: String!, country: String): Address!
	deleteAddress(id: ID!): Boolean
}
